# Flipkart Price Tracker - Frontend Environment Configuration
# Copy this file to .env.local and update with your values

# API Configuration
VITE_API_BASE_URL=http://localhost:5000/api

# Authentication
VITE_AUTH_TOKEN_KEY=auth_token
VITE_AUTH_REFRESH_KEY=refresh_token

# API Timeouts (in milliseconds)
VITE_API_TIMEOUT=30000

# Feature Flags
VITE_ENABLE_NOTIFICATIONS=true
VITE_ENABLE_PRICE_ALERTS=true
VITE_ENABLE_SMS=false
VITE_ENABLE_EMAIL=true

# UI Configuration
VITE_ITEMS_PER_PAGE=10
VITE_MAX_PRODUCTS=50
VITE_CHART_UPDATE_INTERVAL=60000

# Theme Configuration
VITE_THEME_PRIMARY=#00BCD4
VITE_THEME_SECONDARY=#1A237E
VITE_DARK_MODE=true

# Analytics (optional)
VITE_GOOGLE_ANALYTICS_ID=
VITE_SENTRY_DSN=

# Development
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=info
